<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Choose the desired color"/>

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:stretchColumns="*">

            <TableRow>

                <Button
                    android:id="@+id/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:onClick="onWhiteButtonClick"
                    android:text="White"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="48dp" />

                <Button
                    android:id="@+id/yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow"
                    android:onClick="onClick"
                    android:text="Yellow"
                    tools:layout_editor_absoluteX="230dp"
                    tools:layout_editor_absoluteY="392dp" />

            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:onClick="onRedButtonClick"
                    android:text="Red"
                    tools:layout_editor_absoluteX="230dp"
                    tools:layout_editor_absoluteY="296dp" />

                <Button
                    android:id="@+id/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:onClick="onGreenButtonClick"
                    android:text="Green"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="144dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/forestGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGreen"
                    android:onClick="onForestGreenButtonClick"
                    android:text="Forest Green"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="344dp" />

                <Button
                    android:id="@+id/darkBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="onDarkBlueButtonClick"
                    android:text="Dark Blue"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="248dp" />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/springGreen"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:background="@color/lasur"
                    android:onClick="onSpringGreenButtonClick"
                    android:text="Spring Green"
                    tools:layout_editor_absoluteX="230dp"
                    tools:layout_editor_absoluteY="0dp" />

                <Button
                    android:id="@+id/violet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/violet"
                    android:onClick="onVioletButtonClick"
                    android:text="Violet"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="440dp"
                    tools:layout_y="100dp" />

            </TableRow>
            <TableRow> <Button
                android:id="@+id/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:onClick="onBlueButtonClick"
                android:text="Blue"
                tools:layout_editor_absoluteX="230dp"
                tools:layout_editor_absoluteY="96dp" />

                <Button
                    android:id="@+id/Pink"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@color/colorAccent"
                    android:onClick="onPinkButtonClick"
                    android:text="Pink"
                    tools:layout_editor_absoluteX="230dp"
                    tools:layout_editor_absoluteY="192dp" />
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Info about this app"
            android:onClick="infoClick"/>

    </LinearLayout>
</LinearLayout>